<table border="1">
　<tr>
	<th>ID</th>
	<th>タイトル</th>
	<th>公開年</th>
	<th>概要</th>
	<th>画像URL</th>
	<th>上映中</th>
	<th>登録日時</th>
	<th>更新日時</th>
　</tr>
<% @movies.each do |movie| %>
　<tr>
	<td><%= movie.id %></td>
	<td><%= movie.name %></td>
	<td><%= movie.year %></td>
	<td>
	<% if movie.is_showing == true %>
		上映中
	<% else %>
		上映予定
	<% end %>
	</td>
	<td><%= movie.description %></td>
	<td><img src="<%= movie.image_url %>"></td>
	<td><%= movie.created_at %></td>
	<td><%= movie.updated_at %></td>
　</tr>
<% end %>
</table>
